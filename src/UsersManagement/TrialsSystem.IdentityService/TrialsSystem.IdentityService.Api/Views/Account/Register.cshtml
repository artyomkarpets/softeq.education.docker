@model RegisterViewModel
@{
}

<div class="login-page">
	<div class="lead">
		<h1>Login</h1>
		<p>Choose how to login</p>
	</div>

	<partial name="_ValidationSummary" />

	<div class="row">
		<div class="col-sm-6">
			<div class="card">
				<div class="card-header">
					<h2>Registeration</h2>
				</div>

				<div class="card-body">
					<form asp-route="Register">
						<input type="hidden" asp-for="ReturnUrl" />

						<div class="form-group">
							<label asp-for="Email"></label>
							<input class="form-control" placeholder="Username" asp-for="Email" autofocus>
						</div>
						<div class="form-group">
							<label asp-for="Password"></label>
							<input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
						</div>
						<div class="form-group">
							<label asp-for="ConfirmPassword"></label>
							<input type="password" class="form-control" placeholder="Password" asp-for="ConfirmPassword" autocomplete="off">
						</div>

						<div class="form-group">
							<label asp-for="Name"></label>
							<input class="form-control" placeholder="Username" asp-for="Name" autofocus>
						</div>

						<div class="form-group">
							<label asp-for="Surname"></label>
							<input class="form-control" placeholder="Username" asp-for="Surname" autofocus>
						</div>

						<div class="form-group">
							<label asp-for="BirthDate"></label>
							<input class="form-control" type="date" placeholder="Username" asp-for="BirthDate" autofocus>
						</div>

						<div class="form-group">
							<label asp-for="Cities"></label>
							<select class="form-control" asp-for="CityId" asp-items="Model.Cities"></select>
						</div>

						<div class="form-group">
							<label asp-for="Genders"></label>
							<select class="form-control" asp-for="GenderId" asp-items="Model.Genders"></select>
						</div>

						<button class="btn btn-primary" name="button" value="register">Register</button>
						<a href="@Model.ReturnUrl" class="btn btn-secondary" value="cancel">Cancel</a>
					</form>
				</div>
			</div>
		</div>

	</div>
</div>